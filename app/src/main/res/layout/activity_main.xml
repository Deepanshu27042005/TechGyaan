<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Main Welcome Text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not Sure Where to Start in Tech?"
        android:textColor="@color/electric_cyan"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtext -->
    <TextView
        android:id="@+id/tvSubtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We guide you through every domain."
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/techi"
        android:contentDescription="Tech Illustration"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Let's GO!"
        android:textColor="@color/text_dark_navy"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/electric_cyan"
        android:gravity="center"
        android:layout_marginTop="500dp"
        android:clipToOutline="true"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Illustrative Image (optional) -->

</androidx.constraintlayout.widget.ConstraintLayout>
